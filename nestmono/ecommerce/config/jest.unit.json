{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "!**/module.ts",
    "**/{controllers,services}/**/!(*.spec).{ts,js}"
  ],
  "coverageDirectory": "<rootDir>/../../coverage",
  "coverageThreshold": {
    "global": {
      "branches": 75,
      "functions": 75,
      "lines": 75
    }
  },
  "moduleDirectories": ["node_modules"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src/modules",
  "testEnvironment": "node",
  "testMatch": ["**/!(*.e2e).spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
